<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:pageTitle="title">

<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">
		<br />

		<h2>${message:title}</h2>
		<br />
		
		<form t:type="Form" t:id="findBuyForm" class="form-horizontal">
			<t:errors />

			<div class="form-group">
				<t:label for="id" class="col-sm-4 control-label" />
				<div class="col-sm-8">
					<input t:type="TextField" t:id="id" t:validate="required, min=0"
						class="form-control" size="10" maxlength="16" />
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<input class="btn btn-primary" type="submit"
						value="${message:button-find}" />
				</div>
			</div>
		</form>

		<div class="col-md-4"></div>
	</div>
</div>
</html>
