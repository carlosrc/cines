<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:pageTitle="title" t:menuExplanation="menuExplanation">

<div class="row">
	<div class="col-md-4"></div>
	<div class="col-md-4">
		<br />

		<form t:type="Form" t:id="changePasswordForm" class="form-horizontal">
			<t:errors />

			<div class="form-group">
				<t:label for="oldPassword" class="col-sm-5 control-label" />
				<div class="col-sm-7">
					<input t:id="oldPassword" t:type="PasswordField"
						class="form-control" t:validate="required" size="16" maxlength="8" />
				</div>
			</div>

			<div class="form-group">
				<t:label for="newPassword" class="col-sm-5 control-label" />
				<div class="col-sm-7">
					<input t:id="newPassword" t:type="PasswordField"
						class="form-control" t:validate="required" size="16" maxlength="8" />
				</div>
			</div>

			<div class="form-group">
				<t:label for="retypeNewPassword" class="col-sm-5 control-label" />
				<div class="col-sm-7">
					<input t:id="retypeNewPassword" t:type="PasswordField"
						class="form-control" t:validate="required" size="16" maxlength="8" />
				</div>
			</div>

			<div class="button">
				<input class="btn btn-primary" type="submit" value="${message:submit}" />
			</div>

		</form>

		<div class="col-md-4"></div>
	</div>
</div>
</html>