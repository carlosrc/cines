<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="Layout" t:pageTitle="title" t:menuExplanation="menuExplanation">

<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<br />

		<form t:type="Form" t:id="registrationForm" class="form-horizontal">
			<t:errors />

			<div class="form-group">
				<t:label for="loginName" class="col-sm-4 control-label" />
				<div class="col-sm-8">
					<input t:id="loginName" t:type="TextField" t:validate="required"
						class="form-control" size="16" maxlength="30" />
				</div>
			</div>

			<div class="form-group">
				<t:label for="dni" class="col-sm-4 control-label" />
				<div class="col-sm-8">
					<input t:id="dni" t:type="TextField" t:validate="required"
						class="form-control" size="16" maxlength="9" />
				</div>
			</div>

			<div class="form-group">
				<t:label for="password" class="col-sm-4 control-label" />
				<div class="col-sm-8">
					<input t:id="password" t:type="PasswordField" t:validate="required"
						class="form-control" size="16" maxlength="8" />
				</div>
			</div>

			<div class="form-group">
				<t:label for="retypePassword" class="col-sm-4 control-label" />
				<div class="col-sm-8">
					<input t:id="retypePassword" t:type="PasswordField"
						class="form-control" t:validate="required" size="16" maxlength="8" />
				</div>
			</div>

			<div class="form-group">
				<t:label for="firstName" class="col-sm-4 control-label" />
				<div class="col-sm-8">
					<input t:id="firstName" t:type="TextField" t:validate="required"
						class="form-control" size="16" maxlength="30" />
				</div>
			</div>

			<div class="form-group">
				<t:label for="lastName" class="col-sm-4 control-label" />
				<div class="col-sm-8">
					<input t:id="lastName" t:type="TextField" t:validate="required"
						class="form-control" size="16" maxlength="30" />
				</div>
			</div>

			<div class="form-group">
				<t:label for="email" class="col-sm-4 control-label" />
				<div class="col-sm-8">
					<input t:id="email" t:type="TextField" t:validate="required,regexp"
						class="form-control" size="16" maxlength="30" />
				</div>
			</div>

			<div class="button">
				<input class="btn btn-primary" type="submit"
					value="${message:submit}" />
			</div>

		</form>

		<div class="col-md-3"></div>
	</div>
</div>

</html>